{
    "name": "q-api",
    "private": true,
    "version": "0.1.0",
    "description": "Questionniare API",
    "keywords": [],
    "dependencies": {
        "yamljs": "^0.3.0",
        "express": "^4.16.3",
        "swagger-ui-express": "^3.0.10",
        "q-validator": "https://bitbucket.org/adrianroworth/q-validator.git#docker-test",
        "morgan": "^1.9.0",
        "body-parser": "^1.13.3"
    },
    "devDependencies": {
        "fs": "0.0.1-security",
        "jest": "^23.4.1",
        "eslint": "^4.19.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-xo": "^0.20.1",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-prettier": "^2.6.0",
        "husky": "^1.0.0-rc.9",
        "lint-staged": "^7.2.0",
        "nsp": "^3.2.1",
        "prettier": "^1.11.1"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix --color",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error"
            ]
        },
        "plugins": [
            "prettier"
        ]
    },
    "jest": {
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "scripts": {
        "start": "npm run speccy && node app.js",
        "test": "jest",
        "coverage": "jest --coverage",
        "speccy": "cd schema && speccy lint schema.json -j --rules=../../../src/config/speccy/rules/default && speccy resolve schema.json -j -o openapi.yaml && yaml2json openapi.yaml -spi 4",
        "speccy-no-lint": "cd schema && speccy resolve schema.json -j -o openapi.yaml && yaml2json openapi.yaml -spi 4"
    },
    "main": "app.js",
    "author": "Adrian Roworth",
    "license": "MIT",
    "engines": {
        "node": ">=8.11"
    }
}
