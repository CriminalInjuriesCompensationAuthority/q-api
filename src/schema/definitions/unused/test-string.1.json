{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "http://localhost:3000/schema/definitions/test",
    "x-uri": "/test",
    "title": "Test JSON Schema",
    "description": "This is a test schema",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string",
            "title": "First name",
            "pattern": "^(?!\\s*$).+",
            "errorMessages": {
                "required": "Enter your first name",
                "pattern": "Your first name doesn't look right. Try again"
            }
        },
        "lastName": {
            "type": "string",
            "title": "Last name",
            "pattern": "^(?!\\s*$).+",
            "errorMessages": {
                "required": "Enter your last name",
                "pattern": "Your last name doesn't look right. Try again"
            }
        },
        "dob": {
            "type": "string",
            "format": "date-time",
            "title": "What is your date of birth?",
            "errorMessages": {
                "required": "Enter the date you were born",
                "format": "That date doesn't look right. Try again"
            }
        },
        "number-of-siblings": {
            "type": "integer",
            "title": "In total, how many brothers, and sisters do you have?",
            "minimum": 0,
            "errorMessages": {
                "type": "Enter the number of siblings you have. It will be a whole number",
                "minimum": "You can't have a negative number of siblings. Enter a number greater than 0"
            }
        },
        "bio": {
            "type": "string",
            "title": "Bio",
            "maxLength": 2000,
            "errorMessages": {
                "maxLength": "You have entered more than the allowed amount. Please enter up to 2000 characters"
            }
        },
        "car": {
            "type": "string",
            "title": "What car do you own",
            "minLength": 5,
            "errorMessages": {
                "minLength": "Enter more than 5 characters"
            }
        },
        "do-you-like-cheese": {
            "type": "boolean",
            "title": "Do you like cheese?",
            "errorMessages": {
                "required": "We need to know if you like cheese or not"
            }
        }
    },
    "required": ["firstName", "lastName", "dob", "bio", "do-you-like-cheese"]
}
