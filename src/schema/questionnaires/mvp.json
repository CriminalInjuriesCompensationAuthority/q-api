                            "target": "p--period-of-time-stop-date"
                        }
                    ]
                }
            },
            "p--period-of-time-stop-date": {
                "on": {
                    "ANSWER": [
                        {
                            "target": "p-applicant-name"
                        }
                    ]
                }
            },
            "p-applicant-name": {
                "on": {
                    "ANSWER": [
                        {
                            "target": "p-applicant-known-by-other-names"
                        }
                    ]
                }
            },
            "p-applicant-known-by-other-names": {
                "on": {
                    "ANSWER": [
                        {
                            "target": "p-applicant-other-names-used"
                        }
                    ]
