{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "http://localhost:3000/schema/definitions/your-name",
    "x-uri": "/your-name",
    "title": "Who are you?",
    "description": "Tell us about yourself",
    "type": "object",
    "required": ["firstName", "lastName"],
    "properties": {
        "firstName": {
            "type": "string",
            "title": "First name"
        },
        "lastName": {
            "type": "string",
            "title": "Last name"
        },
        "age": {
            "type": "integer",
            "title": "Age",
            "minimum": 18,
            "exclusiveMinimum": true
        },
        "bio": {
            "type": "string",
            "title": "Bio"
        },
        "favouriteCheese": {
            "type": "string",
            "title": "Favourite cheese",
            "minLength": 10
        }
    }
}
